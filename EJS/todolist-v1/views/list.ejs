<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>

    </div>

    <div class="box">

        <% newListItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="boxbox" value="<%= item._id %>" id="" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
        
        <% }) %>

        <form action="/" method="post" class="item">

            <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle %>>+</button>

        </form>

    </div>

    <%- include("footer") -%>